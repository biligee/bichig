= form_for(lookup, :remote => true) do |f|
  - if lookup.errors.any?
    #errorExplanation
      %h2= "#{pluralize(lookup.errors.count, 'error')} prohibited this lookup from being saved:"
      %ul
      - lookup.errors.full_messages.each do |msg|
        %li= msg
  
  = f.hidden_field :feature_id

  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :flag
    %br
    = f.text_field :flag

  %label Language:
  - Language.all.each do |lang| 
    .field
      = f.check_box lang.code.downcase
      = f.label lang.code.downcase, lang.name

  .field
    = f.label :description
    %br
    = f.text_area :description

  = f.submit
