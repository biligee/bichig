%table.glyphs
  %thead
    %tr
      %th Image
      %th
        %table
          %tr
            %th.name Name
            %th.description Description
            %th{:colspan => 3}

  %tbody
    %tr#glyph-adder
      %td.glyph Add:
      %td.editable= render :partial => 'edit'
    - for glyph in @otf_glyphs
      - unless glyph.new_record?
        %tr{:id => "glyph-#{glyph.id}"}
          %td.glyph= image_tag(glyph.path)
          %td.editable= render :partial => "glyph", :object => glyph
