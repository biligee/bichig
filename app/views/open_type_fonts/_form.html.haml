= form_for(@open_type_font, :html => { :multipart => true }) do |f|
  - if @open_type_font.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@open_type_font.errors.count, 'error')} prohibited this font from being saved:"
      %ul
      - @open_type_font.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :source
    %br
    = f.file_field :source

  .actions
    = f.submit
